echo -e "----------- $counter Project $green$id$std"

for hostid in "${hosts[@]}"
do
	host="hosts_"$hostid"_host"
	user="hosts_"$hostid"_user"
	exec_wrap "$id:test" ssh ${!user}@${!host} ls ${!deploy_to}
done

echo -e $green"Ok things seems to be all right"$std